<?xml version="1.0" encoding="UTF-8"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Definition xsi:type="MyObjectBuilder_HandItemDefinition">
    <Id Type="HandItem" Subtype="SwordFiery" />

    <!-- Display -->
    <Public>false</Public>
    <DisplayName>DisplayName_Weapon_SwordFiery</DisplayName>
    <Description>Description_Weapon_FierySword</Description>
    <Icon>Textures\GUI\Icons\ToolsAndWeapons\SwordFiery.dds</Icon>
    <Tag>WeaponMelee</Tag>
    <Size>
      <X>1.2</X>
      <Y>0.6</Y>
      <Z>0.3</Z>
