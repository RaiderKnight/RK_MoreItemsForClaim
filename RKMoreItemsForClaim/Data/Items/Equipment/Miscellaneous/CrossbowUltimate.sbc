<?xml version="1.0" encoding="UTF-8"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <!-- Crossbow -->

  <Definition xsi:type="MyObjectBuilder_HandItemDefinition">
    <Id Type="HandItem" Subtype="CrossbowUltimate" />

    <!-- Display -->

    <Public>false</Public>
    <DisplayName>DisplayName_Weapon_CrossbowUltimate</DisplayName>
    <Description>Description_Weapon_CrossbowUltimate</Description>
    <Icon>Textures\GUI\Icons\RedHerring.dds</Icon>
    <Icon>Textures\GUI\Icons\ToolsAndWeapons\CrossbowSteel.dds</Icon>
	  <Tag>WeaponRanged</Tag>
    <Size>
      <X>1.2</X>
      <Y>0.6</Y>
      <Z>0.3</Z>
    </Size>
    <Model>Models\Weapons\CrossbowSteel.mwm</Model>

    <PhysicalMaterial>Metal</PhysicalMaterial>
    <Mass>5</Mass>
    <ItemBreakEvent>ToolBreakMetal</ItemBreakEvent>
    <!-- TODO -->

    <MaxStackAmount>1</MaxStackAmount>

    <!-- Equipment -->
    <BearerDefinition Type="MyObjectBuilder_EntityEquipmentComponent" Subtype="Humanoid" />

    <MaxDurability>600</MaxDurability>

    <BrokenItem Type="MyObjectBuilder_InventoryItem" Subtype="CrossbowSteelBroken" />
    <Position>
	  <Slot>GhostHand</Slot>
      <Slot>MainHand</Slot>
      <Slot>OffHand</Slot>
    </Position>
	
    <Animation>crossbow</Animation>
    <EquippedTransformFps>
      <Position>
        <X>0.08</X>
        <Y>-0.16</Y>
        <Z>-0.05</Z>
      </Position>
      <Orientation>
        <X>0</X>
        <Y>0.7071</Y>
        <Z>0.7071</Z>
        <W>0</W>
      </Orientation>
    </EquippedTransformFps>
    <DummyMapping Name="crossbow_dumb_right" AnimationVariable="#crossbowright" />
    <DummyMapping Name="crossbow_dumb_left" AnimationVariable="#crossbowleft" />
    <DummyMapping Name="crossbow_dumb_right02" AnimationVariable="#crossbowright02" />
    <DummyMapping Name="crossbow_dumb_left02" AnimationVariable="#crossbowleft02" />

    <AllowEmotes>false</AllowEmotes>
    
    <!-- Behavior -->
    <StanceToBehavior>
      <StanceName>CombatMode</StanceName>
      <BehaviorId Type="RangedWeaponBehaviorDefinition" Subtype="CrossbowUltimate" />
    </StanceToBehavior>
  </Definition>

  <Definition xsi:type="MyObjectBuilder_RangedWeaponBehaviorDefinition">
    <Id Type="RangedWeaponBehaviorDefinition" Subtype="CrossbowUltimate" />
    <Projectile Type="ProjectileItem" Subtype="CrossbowBolt" />

    <ReloadTime>1</ReloadTime>
    <ReloadCost Stat="Stamina" Cost="0" />

    <ShootTime>0</ShootTime>
    <ShootVelocity>75</ShootVelocity>

    <ShootSoundName>ToolCrossbShot</ShootSoundName>
    <ReloadSoundName>ToolCrossbReload</ReloadSoundName>
    <ShootAnimation>shoot</ShootAnimation>
    <ModelReadyToShoot>Models\Weapons\CrossbowSteel_loaded.mwm</ModelReadyToShoot>
    
    <IronsightEffect Type="CompositeEntityEffect" Subtype="Ironsight" />
    <ReloadEffect Type="CompositeEntityEffect" Subtype="CrossbowReload" />
  </Definition>
</Definitions>